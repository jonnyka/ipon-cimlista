{% extends 'SedUniOfficeManagerAppBundle:Default:base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row span3">
        <h2>{% trans %}sed_uniofficemanager_app_bundle.queue.scheduledJobs{% endtrans %}</h2>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>{% trans %}sed_uniofficemanager_app_bundle.queue.date{% endtrans %}</th>
                <th>{% trans %}sed_uniofficemanager_app_bundle.queue.count{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for timestamp in timestamps %}
                <tr>
                    <th class="span2">
                        <a href="{{ path('queue_show_timestamp', {timestamp: timestamp[0]}) }}">
                            {{ timestamp[0]|date('Y-m-d H:i:s') }}</a>
                    </th>
                    <td class="span1">{{ timestamp[1] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
