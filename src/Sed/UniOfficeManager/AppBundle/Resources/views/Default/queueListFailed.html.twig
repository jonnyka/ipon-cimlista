{% extends 'SedUniOfficeManagerAppBundle:Default:base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row span11">
        <h2>{% trans %}sed_uniofficemanager_app_bundle.queue.failedJobs{% endtrans %}</h2>
        {% include "SedUniOfficeManagerAppBundle:Default:_miniPager.html.twig" %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>{% trans %}sed_uniofficemanager_app_bundle.queue.queue{% endtrans %}</th>
                    <th>{% trans %}sed_uniofficemanager_app_bundle.queue.failedAt{% endtrans %}</th>
                    <th>{% trans %}sed_uniofficemanager_app_bundle.queue.job{% endtrans %}</th>
                    <th>{% trans %}sed_uniofficemanager_app_bundle.queue.error{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
                {% for job in jobs %}
                <tr>
                    <td class="span1">{{ job.queueName }}</td>
                    <td class="span2">{{ job.failedAt }}</td>
                    <td class="span4">{{ job.name }}</td>
                    <td class="span4">
                        {{ job.exceptionClass }}<br>
                        {{ job.error }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">
                        <em>{% trans %}sed_uniofficemanager_app_bundle.queue.empty{% endtrans %}</em>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
