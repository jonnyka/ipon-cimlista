{% extends 'SedUniOfficeManagerAppBundle:Default:base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row span11">
        <h3>{{ "sed_uniofficemanager_app_bundle.queue.queueName" | trans({'%name%': queue.name}) | raw }}</h3>
        {% include "SedUniOfficeManagerAppBundle:Default:_miniPager.html.twig" %}
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>{% trans %}sed_uniofficemanager_app_bundle.queue.hash{% endtrans %}</th>
                <th>{% trans %}sed_uniofficemanager_app_bundle.queue.name{% endtrans %}</th>
                <th>{% trans %}sed_uniofficemanager_app_bundle.queue.date{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <td class="span1">{{ loop.index }}</td>
                    <td class="span4">{{ job.name }}</td>
                    <td class="span6">{{ job.args | json_encode }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        <em>{% trans %}sed_uniofficemanager_app_bundle.queue.empty{% endtrans %}</em>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
