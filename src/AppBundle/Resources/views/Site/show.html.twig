{% extends 'SedUniOfficeManagerAppBundle:Default:base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row span11">
            <h2>{% trans %}sed_uniofficemanager_app_bundle.site.site{% endtrans %}</h2>

            <table class="table table-striped table-bordered">
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.gitrepo{% endtrans %}</th>
                    <td class="span4">{{ site.gitrepo }}</td>
                </tr>
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.port{% endtrans %}</th>
                    <td class="span4">{{ site.port }}</td>
                </tr>
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.name{% endtrans %}</th>
                    <td class="span4">{{ site.name }}</td>
                </tr>
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.title{% endtrans %}</th>
                    <td class="span4">{{ site.title }}</td>
                </tr>
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.directory{% endtrans %}</th>
                    <td class="span4">{{ site.directory }}</td>
                </tr>
                <tr>
                    <th class="span2">{% trans %}sed_uniofficemanager_app_bundle.site.updated{% endtrans %}</th>
                    <td class="span4">{{ site.lastUpdated ? site.lastUpdated|date('Y-m-d H:i:s') : '-' }}</td>
                </tr>
            </table>
        </div>
    </div>
{% endblock %}