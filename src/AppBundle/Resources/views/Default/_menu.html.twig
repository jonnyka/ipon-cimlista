{% import _self as nav %}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="collapse navbar-collapse">
            <div class="container">
                <a class="navbar-brand" href="{{ path('welcome') }}"><img src="{{ asset('bundles/app/images/logo.png') }}" width="32px"></a>
                <a class="navbar-brand" href="{{ path('welcome') }}">{% trans %}app_bundle.message.logo{% endtrans %}</a>

                <ul class="nav navbar-nav">
                    <li {{ nav.activeClass(activeNav, 'people') }}>
                        <a href="{{ path('person_list') }}">
                            {% trans %}app_bundle.menu.people{% endtrans %}
                        </a>
                    </li>
                    {% if app.user %}
                        <li {{ nav.activeClass(activeNav, 'admin') }}>
                            <a href="{{ path('person_list_admin') }}">
                                {% trans %}app_bundle.menu.admin{% endtrans %}
                            </a>
                        </li>
                    {% endif %}
                </ul>

                {{ render(controller('UserBundle:User:login')) }}
            </div>
        </div>
    </div>
</nav>


{% macro activeClass(activeNav,item) %}
    {% if activeNav == item %}
    class="active"
    {% endif %}
{% endmacro %}
